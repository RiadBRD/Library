pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git(branch: 'main', url: 'https://github.com/RiadBRD/Library.git')
            }
        }

        stage('Build') {
            steps {
                cd 'backend'
                bat 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                cd 'backend'
                bat 'mvn test'
            }
        }
    }

    post {
        success {
            echo 'Build et tests réussis'
        }

        failure {
            echo 'Le build a échoué'
        }
    }
}
