pipeline {
    agent any

    triggers {
        // Enables GitHub webhook trigger
        githubPush()
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout your main branch automatically
                checkout([$class: 'GitSCM', 
                          branches: [[name: '*/main']], 
                          userRemoteConfigs: [[url: 'https://github.com/RiadBRD/Library.git']]])
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'mvn test'
            }
        }
    }

    post {
        success {
            echo '✅ Build and tests succeeded!'
        }
        failure {
            echo '❌ Build failed!'
        }
    }
}
